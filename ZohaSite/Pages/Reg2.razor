@page "/registration2"
@inject NavigationManager nav;


<form action="action_page.php">
  <div class="container">
    <h1>Register</h1>
    <hr>

    <label for="email"><b>Login</b></label>
    <input @bind-value="login"type="text" placeholder="Enter Login" name="email" required>
    <label for="psw"><b>Password</b></label>
    <input @bind-value="password" type="password" placeholder="Enter Password" required>
    <hr>
    <button @onclick="Registration"class="btn-dark btnlogin">Register</button>
  </div>
</form>

@code 
{
    string login = string.Empty;
    string password = string.Empty;
   public void Registration()
   {
        try
        {
              EtoBasa.AddUser(login,Paswordd.MakeHash(password),false);
              nav.NavigateTo("/reg/");
        }
        catch (Exception)
        {
            

        }
    

   }



}
